<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="32dp" >

    <TextView
        android:id="@+id/main_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/main_welcome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mainInfo"
        android:text="@string/main_info"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="50dp"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:onClick="mainWithings"
            android:text="@string/main_withings" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:onClick="mainFitbit"
            android:text="@string/main_fitbit" />
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mainKcal"
        android:layout_marginBottom="25dp"
        android:text="@string/main_kCal" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mainMsgUser"
        android:text="@string/main_msgusr"
        android:visibility="gone" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mainMsgAll"
        android:text="@string/main_msgall"
        android:visibility="gone" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        android:onClick="mainDining"
        android:text="Healthy Dining Options" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mainLogout"
        android:text="@string/main_logout"
        android:visibility="gone" />

</LinearLayout>